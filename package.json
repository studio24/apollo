{
  "name": "studio24-apollo",
  "version": "2.0.0",
  "author": "Studio 24",
  "description": "NPM scripts for building front-end website files",
  "license": "MIT",
  "config": {
    "from": "apollo/assets",
    "to": "web/dist/assets"
  },
  "scripts": {
    "css:core:compressed": "node-sass --output-style=compressed --source-map=true ${npm_package_config_from}/styles/core.scss ${npm_package_config_to}/styles/core.min.css",
    "css:core:uncompressed": "node-sass ${npm_package_config_from}/styles/core.scss ${npm_package_config_to}/styles/core.css",
    "css:advanced:compressed": "node-sass --output-style=compressed --source-map=true ${npm_package_config_from}/styles/advanced.scss ${npm_package_config_to}/styles/advanced.min.css",
    "css:advanced:uncompressed": "node-sass ${npm_package_config_from}/styles/advanced.scss ${npm_package_config_to}/styles/advanced.css",
    "css:sass": "npm-run-all --parallel css:core:* css:advanced:*",
    "css:autoprefixer": "autoprefixer-cli -d ${npm_package_config_to}/styles ${npm_package_config_to}/styles/*.css",
    "css": "npm-run-all --sequential css:sass css:autoprefixer",
    "images:imagemin": "imagemin ${npm_package_config_from}/images/* --out-dir=${npm_package_config_to}/images",
    "images:svg": "svgo --folder=${npm_package_config_from}/svg --output=${npm_package_config_to}/svg --disable='removeViewBox' | true",
    "images": "npm-run-all --parallel images:imagemin images:svg",
    "fonts": "shx cp -r ${npm_package_config_from}/fonts/* ${npm_package_config_to}/fonts",
    "js:copylibraries": "shx cp -r ${npm_package_config_from}/js/libraries/* ${npm_package_config_to}/js/libraries/",
    "js:copypackages": "copyfiles --flat node_modules/fontfaceobserver/fontfaceobserver.js node_modules/parsleyjs/dist/parsley.js ${npm_package_config_to}/js/libraries",
    "js:copyfunctions": "shx cp -r ${npm_package_config_from}/js/functions/* ${npm_package_config_to}/js/functions/",
    "jsmain:babel:core": "babel ${npm_package_config_from}/js/core.js --out-file ${npm_package_config_to}/js/core.js",
    "jsmain:babel:compressed": "babel ${npm_package_config_from}/js/app.js --out-file ${npm_package_config_to}/js/app.min.js --minified --compact",
    "jsmain:babel:uncompressed": "babel ${npm_package_config_from}/js/app.js --out-file ${npm_package_config_to}/js/app.js",
    "js": "npm-run-all --parallel js:copylibraries js:copypackages js:copyfunctions jsmain:babel:*",
    "build": "npm-run-all --parallel css images fonts js",
    "prebuild": "shx rm -rf ${npm_package_config_to} && shx mkdir -p ${npm_package_config_to}/fonts && shx mkdir ${npm_package_config_to}/images && shx mkdir ${npm_package_config_to}/js && shx mkdir ${npm_package_config_to}/js/libraries && shx mkdir ${npm_package_config_to}/js/functions && shx mkdir ${npm_package_config_to}/styles && shx mkdir ${npm_package_config_to}/svg",
    "watch:css": "watch 'npm run css' ${npm_package_config_from}/styles --interval=1",
    "watch:images:svg": "watch 'npm run images:svg' ${npm_package_config_from}/svg --interval=1",
    "watch:images:imagemin": "watch 'npm run images:imagemin' ${npm_package_config_from}/images --interval=1",
    "watch:fonts": "watch 'npm run fonts' ${npm_package_config_from}/fonts --interval=1",
    "watch:js:copylibraries": "watch 'npm run js:copylibraries' ${npm_package_config_from}/js/libraries --interval=1",
    "watch:js:copyfunctions": "watch 'npm run js:copyfunctions' ${npm_package_config_from}/js/functions --interval=1",
    "watch:jsmainbabel:compressed": "watch 'npm run jsmain:babel:compressed' ${npm_package_config_from}/js/ --ignoreDirectoryPattern=/libraries/.*/ --interval=1",
    "watch:jsmainbabel:uncompressed": "watch 'npm run jsmain:babel:uncompressed' ${npm_package_config_from}/js/ --ignoreDirectoryPattern=/libraries/.*/ --interval=1",
    "watch": "npm-run-all --parallel watch:* watch:*:*"
  },
  "dependencies": {
    "@babel/cli": "^7.10.1",
    "autoprefixer-cli": "^1.0.0",
    "copyfiles": "^2.3.0",
    "fontfaceobserver": "^2.1.0",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.14.1",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "parsleyjs": "^2.9.2",
    "shx": "^0.2.2",
    "svgo": "^1.3.2",
    "watch": "^1.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/polyfill": "^7.10.1",
    "@babel/preset-env": "^7.10.2"
  }
}
